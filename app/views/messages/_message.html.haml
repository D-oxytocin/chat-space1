.message{"data-message-id": message.id}
  .upper-message
    .upper-message__user_name
      = message.user.name
    .upper-message__date
      = message.created_at
  .lower-meesage
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image', size:'120x180' if message.image.present?
